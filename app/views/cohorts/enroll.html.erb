<% content_for :header do %>
  <script>
    function doCopyTextEnroll() {
      /* Get the text field */
      var copyText = document.getElementById("copyThisEnroll");

      /* Select the text field */
      copyText.select();
      copyText.setSelectionRange(0, 99999); /* For mobile devices */

       /* Copy the text inside the text field */
      navigator.clipboard.writeText(copyText.value);

      $('#copyTooltipEnroll').fadeIn("fast");
      $('#copyTooltipEnroll').fadeOut(3000)
    } 
  </script>
<% end %>
<p id="notice"><%= notice %></p>

<div class="d-print-none">
  <h1>Cohort Enrollment (Registration)</h1>
  <input type="text" readonly="true" value="<%= @special_link %>" id="copyThisEnroll" hidden="hidden" />
</div>
<div class="d-none d-print-block">
  <h1 style="text-align: center">Georgia PREP</h1>
</div>

<div class="d-flex flex-column justify-content-center align-items-center">
  <div><h2 style="text-align: center">Enrollment<br /><%= @cohort.name %> (<%= @cohort.extra_name %>)</h2></div>
  <div style="padding-top: 10px; padding-bottom: 10px"><%= RQRCode::QRCode.new( @special_link ).as_svg(offet: 0, color: '000', shape_rendering: 'crisp_edges', module_size: 6).html_safe %></div>
  <div class="d-print-none"><button onclick="doCopyTextEnroll()" id="copyLinkButtonEnroll">Copy Link</button></div>
  <div class="d-print-none"><p>&nbsp;<span style="color: green; display: none" id="copyTooltipEnroll" role="tooltip">Link copied!</span>&nbsp;</p></div>
</div>
