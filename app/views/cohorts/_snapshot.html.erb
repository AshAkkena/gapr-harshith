      <div class="field">
        <%= form.check_box :adolescent_development_material_add_curr_entirely, disabled: true %>
        <%= form.label :adolescent_development_material_add_curr_entirely %>
      </div>
    
      <div class="field">
        <%= form.check_box :adolescent_development_material_add_curr_adhoc, disabled: true %>
        <%= form.label :adolescent_development_material_add_curr_adhoc %>
      </div>
    
      <div class="field">
        <%= form.check_box :adolescent_development_material_original_content, disabled: true %>
        <%= form.label :adolescent_development_material_original_content %>
      </div>
    </div>
    <div class="curriculum-props">
