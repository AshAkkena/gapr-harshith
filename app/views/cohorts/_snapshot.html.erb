        <%= form.label :covered_financial_literacy %>
      </div>
      <div class="field">
        <%= form.check_box :financial_literacy_material_evidence_based, disabled: true %>
        <%= form.label :financial_literacy_material_evidence_based %>
      </div>
    
      <div class="field">
        <%= form.check_box :financial_literacy_material_add_curr_entirely, disabled: true %>
        <%= form.label :financial_literacy_material_add_curr_entirely %>
      </div>
    
      <div class="field">
        <%= form.check_box :financial_literacy_material_add_curr_adhoc, disabled: true %>
        <%= form.label :financial_literacy_material_add_curr_adhoc %>
      </div>
    
      <div class="field">
        <%= form.check_box :financial_literacy_material_original_content, disabled: true %>
        <%= form.label :financial_literacy_material_original_content %>
      </div>
    </div>
  </div>
  <p></p>
  <div class="d-flex justify-content-around">  
    <div class="curriculum-props">
      <h3>Parent-Child Communication</h3>
      <div class="field">
        <%= form.check_box :covered_par_child_comm, disabled: true %>
        <%= form.label :covered_par_child_comm %>
      </div>
    
      <div class="field">
        <%= form.check_box :par_child_comm_material_evidence_based, disabled: true %>
        <%= form.label :par_child_comm_material_evidence_based %>
      </div>
    
      <div class="field">
        <%= form.check_box :par_child_comm_material_add_curr_entirely, disabled: true %>
        <%= form.label :par_child_comm_material_add_curr_entirely %>
      </div>
    
      <div class="field">
        <%= form.check_box :par_child_comm_material_add_curr_adhoc, disabled: true %>
        <%= form.label :par_child_comm_material_add_curr_adhoc %>
      </div>
    
      <div class="field">
        <%= form.check_box :par_child_comm_material_original_content, disabled: true %>
        <%= form.label :par_child_comm_material_original_content %>
      </div>
    </div>
    <div class="curriculum-props">
      <h3>Career Success</h3>
      <div class="field">
        <%= form.check_box :covered_edu_career_success, disabled: true %>
        <%= form.label :covered_edu_career_success %>
      </div>
    
      <div class="field">
        <%= form.check_box :edu_career_success_material_evidence_based, disabled: true %>
        <%= form.label :edu_career_success_material_evidence_based %>
      </div>
    
      <div class="field">
        <%= form.check_box :edu_career_success_material_add_curr_entirely, disabled: true %>
        <%= form.label :edu_career_success_material_add_curr_entirely %>
      </div>
    
      <div class="field">
        <%= form.check_box :edu_career_success_material_add_curr_adhoc, disabled: true %>
        <%= form.label :edu_career_success_material_add_curr_adhoc %>
      </div>
    
      <div class="field">
        <%= form.check_box :edu_career_success_material_original_content, disabled: true %>
        <%= form.label :edu_career_success_material_original_content %>
      </div>
    </div>
    <div class="curriculum-props">
      <h3>Healthy Life Skills</h3>
      <div class="field">
        <%= form.check_box :covered_healthy_life_skills, disabled: true %>
        <%= form.label :covered_healthy_life_skills %>
      </div>
    
      <div class="field">
        <%= form.check_box :healthy_life_skills_material_evidence_based, disabled: true %>
        <%= form.label :healthy_life_skills_material_evidence_based %>
      </div>
    
      <div class="field">
        <%= form.check_box :healthy_life_skills_material_add_curr_entirely, disabled: true %>
        <%= form.label :healthy_life_skills_material_add_curr_entirely %>
      </div>
    
      <div class="field">
        <%= form.check_box :healthy_life_skills_material_add_curr_adhoc, disabled: true %>
        <%= form.label :healthy_life_skills_material_add_curr_adhoc %>
      </div>
    
      <div class="field">
        <%= form.check_box :healthy_life_skills_material_original_content, disabled: true %>
        <%= form.label :healthy_life_skills_material_original_content %>
      </div>
    </div>
  </div>
  <% if cohort.uses_enrollment? %>
    <div>
      <h2>Graduates</h2>
      <ul>
        <% if cohort.enrollments.where(graduate: true).length > 0 %>
          <% cohort.enrollments.where(graduate: true).each do |graduate| %>
            <li><%= graduate.quick_name %></li>
          <% end %>
        <% else %>
          <li>(None)</li>
        <% end %>
      <ul>
    </div>
  <% end %>

<% end %>
