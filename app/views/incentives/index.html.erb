<p id="notice"><%= notice %></p>

<h1>Incentives</h1>
<table class="apa">
  <caption>All recorded incentives</caption>
  <thead>
    <tr>
      <th>Date</th>
      <th>Species</th>
      <th>Variety</th>
      <th>Fingerprint</th>
      <th>Period</th>
      <th colspan="3">Actions</th>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @incentives.each do |incentive| %>
    <tr>
      <td><%= incentive.created_at.localtime.to_s  %></td>
      <td><%= incentive.species %></td>
      <td><%= incentive.variety %></td>
      <td><%= incentive.fingerprint %></td>
      <td><%= incentive.period %></td>
      <td><%= link_to 'Show', incentive %></td>
      <td><%= link_to 'Edit', edit_incentive_path(incentive) %></td>
      <td><%= link_to 'Destroy', incentive, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>

  </tbody>
</table>
    
<br>

<%= link_to 'New Incentive', new_incentive_path %>
